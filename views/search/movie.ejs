<div class="search-container">
    <h2>Searching for Movies:</h2>
    <div class="search-info">
        <form action="/search/movie" method="GET">
            <div class="row">
                <div class="row-item">
                    <label>Name</label>
                    <input type="text" name="name" value="<% searchOptions.name %>">
                </div>
                <div class="row-item">
                    <label>Published Before</label>
                    <input type="date" name="publishedBefore" value="<% searchOptions.publishedBefore %>">
                </div>
                <div class="row-item">
                    <label>Published After</label>
                    <input type="date" name="publishedAfter" value="<% searchOptions.publishedAfter %>">
                </div>
            </div>
            <div class="row">
                <div class="row-item">
                    <label>Rating</label>
                    <input type="Number" name="rating" value="<% searchOptions.rating %>">
                </div>
                <div class="row-item">
                    <label>Director</label>
                    <input type="text" name="director" value="<% searchOptions.director %>">
                </div>
            </div>
            <div class="row">
                <button class="btn btn-search" type="submit">Search</button>
            </div>
        </form>
    </div>
    <div class="movie-container-search">
        <% movies.forEach(movie => { %> 
            <a href="/movies/<%= movie.id %>">
                <% if (movie.cover && movie.cover.filePath) { %>
                    <!-- Bild aus `public/uploads` anzeigen -->
                    <img class="cover" src="<%= movie.cover.filePath %>" alt="<%= movie.name %>" width="150">
                <% } else if (movie.cover && movie.cover.data) { %>
                    <!-- Falls `filePath` fehlt, Base64-String nutzen -->
                    <img class="cover" src="data:<%= movie.cover.contentType %>;base64,<%= movie.cover.data.toString('base64') %>" alt="<%= movie.name %>" width="150">
                <% } else { %>
                    <p>Kein Cover verf√ºgbar</p>
                <% } %>
            </a>
        <% }) %>
    </div>
</div>